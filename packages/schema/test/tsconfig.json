{
  "compilerOptions": {
    "composite": true,

    "target": "es2015",
    "lib": ["es2015"],
    "declaration": true,
    "stripInternal": true,
    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true
  }
}
