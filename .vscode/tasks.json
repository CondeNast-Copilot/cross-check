{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Type Check",
      "type": "shell",
      "command": "yarn tsc --noEmit --watch -p .",
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "yarn tslint -p .",
      "problemMatcher": "$tslint5",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "Full Build",
      "type": "shell",
      "command": "yarn run build",
      "group": "build"
    },
    {
      "label": "Build Tests",
      "type": "shell",
      "command": "yarn run build-tests",
      "group": "build"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "yarn run tests",
      "group": "test"
    }
  ]
}
